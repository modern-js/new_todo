      <ul>
        <% for (let i=0; i < tasks.length; i++) { %>
          <li><%= tasks[i].item %></li>
        <% } %>
      </ul>
    </div>
    <script type="text/javascript" src="/assets/todo-list.js"></script>
  </body>
</html>
